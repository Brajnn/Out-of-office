@model Out_of_Office.Application.Employee.EmployeeDto
@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Subdivision</dt>
        <dd class="col-sm-10">@Model.Subdivision</dd>

        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">People Partner ID</dt>
        <dd class="col-sm-10">@Model.PeoplePartnerID</dd>

        <dt class="col-sm-2">Out Of Office Balance</dt>
        <dd class="col-sm-10">@Model.OutOfOfficeBalance</dd>

        @if (Model.Photo != null && Model.Photo.Length > 0)
        {
            <dt class="col-sm-2">Photo</dt>
            <dd class="col-sm-10">
                <img src="data:image;base64,@Convert.ToBase64String(Model.Photo)" alt="Employee Photo" style="max-width:200px;" />
            </dd>
        }
    </dl>
</div>
@if (User.IsInRole("Project Manager") || User.IsInRole("Administrator"))
{
    <div>
    <a asp-action="AssignProject" asp-route-employeeId="@Model.Id" class="btn btn-primary">Assign to Projects</a>
    </div>
}
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
